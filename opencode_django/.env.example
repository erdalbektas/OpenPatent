# openpatent Django Server Environment Variables
# Copy this file to .env and fill in your values

# Django settings
DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# PostgreSQL
POSTGRES_DB=openpatent
POSTGRES_USER=openpatent
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis (for Channels)
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
openpatent_API_URL=http://localhost:8000

# Stripe (get these from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxx

# Email (optional)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@your-domain.com
